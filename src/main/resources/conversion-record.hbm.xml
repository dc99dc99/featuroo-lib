<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.co.creativefootprint.sixpack4j.model.ConversionRecord" table="Conversion">
        <meta attribute="class-description">
            Records participation in an experiment.
        </meta>
        <id name="id" type="int" column="id" access="field">
            <generator class="identity"/>
        </id>
        <many-to-one name="client" column="client_id" class="uk.co.creativefootprint.sixpack4j.model.Client" access="field" lazy="false"/>
        <many-to-one name="experiment" column="experiment_id" class="uk.co.creativefootprint.sixpack4j.model.Experiment" access="field" lazy="false"/>
        <property name="kpi" column="kpi" type="string" access="field"/>
    </class>
</hibernate-mapping>