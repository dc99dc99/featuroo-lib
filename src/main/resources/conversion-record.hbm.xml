<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="uk.co.creativefootprint.featuroo.model.ConversionRecord" table="Conversion">
        <meta attribute="class-description">
            Records participation in an experiment.
        </meta>
        <id name="id" type="int" column="id" access="field">
            <generator class="identity"/>
        </id>
        <many-to-one name="client" column="client_id" class="uk.co.creativefootprint.featuroo.model.Client" access="field"/>
        <many-to-one name="experiment" column="experiment_id" class="uk.co.creativefootprint.featuroo.model.Experiment" access="field"/>
        <property name="goal" column="goal" type="string" access="field"/>
        <property name="dateTime" column="date_time" type="java.util.Date" access="field"/>
    </class>
</hibernate-mapping>